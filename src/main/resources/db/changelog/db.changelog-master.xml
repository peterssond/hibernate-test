<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
    logicalFilePath="classpath:changelog/changelog.xml">

  <changeSet id="1" author="dp">
    <createTable tableName="parent">
      <column name="parent_id" type="varchar(64)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2" author="dp">
    <createTable tableName="child">
      <column name="parent_id" type="varchar(64)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint constraintName="CHILD_PARENT_FK"
        baseColumnNames="parent_id" baseTableName="child"
        referencedColumnNames="parent_id" referencedTableName="parent"/>
  </changeSet>
</databaseChangeLog>